# Staging Environment Configuration
# API Base URL - should be set to the staging backend URL
VITE_API_BASE_URL=http://staging.example.com/api/v1

# Build optimization settings (similar to production but with sourcemaps for debugging)
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true

# Application settings
VITE_APP_NAME=PGB4 Message Board (Staging)
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=staging

# Performance settings
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# API timeout (longer for staging debugging)
VITE_API_TIMEOUT=15000