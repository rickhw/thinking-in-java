# PGB4 Backend Environment Configuration
# This file should be placed at /etc/systemd/system/pgb4-backend.service.d/override.conf
# or sourced by the systemd service

# Java Runtime Options
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:+UseStringDeduplication

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/pgb4_messageboard?useSSL=true&serverTimezone=UTC
DB_USERNAME=pgb4_user
DB_PASSWORD=your_secure_password_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/pgb4/backend.log

# Application Configuration
APP_NAME=PGB4 Message Board
APP_VERSION=1.0.0

# Security Configuration
JWT_SECRET=your_jwt_secret_here
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80

# Performance Configuration
HIKARI_MAXIMUM_POOL_SIZE=10
HIKARI_MINIMUM_IDLE=5
HIKARI_CONNECTION_TIMEOUT=30000