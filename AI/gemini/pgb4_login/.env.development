# Development Environment Configuration for PGB4 Message Board Docker Compose

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
BUILD_VERSION=dev-latest

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=pgb_dev
DB_USERNAME=pgb_dev_user
DB_PASSWORD=pgb_dev_password
DB_ROOT_PASSWORD=dev_root_password
DB_PORT=3306

# Development database settings
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=5
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
SERVER_PORT=8080
CONTEXT_PATH=

# Development logging
LOG_LEVEL=DEBUG
APP_LOG_LEVEL=DEBUG

# Development performance settings
ASYNC_CORE_SIZE=5
ASYNC_MAX_SIZE=10
ASYNC_QUEUE_CAPACITY=25

# Development JVM settings
JVM_MIN_HEAP=256m
JVM_MAX_HEAP=512m

# Development resource limits
BACKEND_MEMORY_LIMIT=1G
BACKEND_CPU_LIMIT=1.0
BACKEND_MEMORY_RESERVATION=256M
BACKEND_CPU_RESERVATION=0.25

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000
FRONTEND_API_URL=http://localhost:8080/api/v1

# Development nginx settings
NGINX_WORKERS=1
NGINX_CONNECTIONS=512
NGINX_MAX_BODY_SIZE=16M

# Development resource limits
FRONTEND_MEMORY_LIMIT=128M
FRONTEND_CPU_LIMIT=0.5
FRONTEND_MEMORY_RESERVATION=64M
FRONTEND_CPU_RESERVATION=0.1

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MEMORY_LIMIT=64M
REDIS_CPU_LIMIT=0.1

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
DATA_DIR=./data
LOGS_DIR=./logs

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
NETWORK_SUBNET=172.20.0.0/16